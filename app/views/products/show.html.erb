<div class="container">
<div class="panel panel-default product-show">
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12 product-show-header">
        <h1><%= @product.name.titleize %></h1>
      </div>
      <div class="col-xs-12 col-md-4 product-show-image">
        <figure>
            <%= image_tag('cafe.jpg', :class => 'product-img img-responsive') %>
        </figure>
      </div>
      <div class="col-xs-12 col-md-4 col-md-offset-2 product-show-profile">
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Name:</strong></td>
                <td><%= @product.name %></td>
              </tr>
              <tr>
                <td><strong>Brand:</strong></td>
                <td><%= @product.brand %></td>
              </tr>
              <tr>
                <td><strong>Model:</strong></td>
                <td><%= @product.model %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @product.description %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>



      <!-- id          :integer          not null, primary key
    #  name        :string
    #  brand       :string
    #  model       :string
    #  description :text
    #  user_id     :integer
    #  category_id :integer
    #  created_at  :datetime
    #  updated_at  :datetime -->

    </div>
  </div>
</div>
</div>
